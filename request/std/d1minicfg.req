		$where = '';
		foreach(std::posts('ids', array()) as $ids) {
			$where .= '[id_d1mini] = '.$ids.' OR ';
		}
		$database = new wpDatabase();
		$database->query("UPDATE [d1mini] SET
			[active] = ".(std::posts('newaktiv') == 'True' ? '1' : '0')."
			WHERE ".substr($where, 0, -4));
